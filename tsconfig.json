{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "lib": [
      "ESNext",
    ],
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/tests"]
}
